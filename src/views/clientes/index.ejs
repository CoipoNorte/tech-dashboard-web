<%- include('../partials/header') %>
<div class="container mt-4">
  <h2>Clientes</h2>
  <a href="/clientes/nuevo" class="btn btn-primary mb-2">Nuevo Cliente</a>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Teléfono</th>
        <th>Email</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% clientes.forEach(cliente => { %>
        <tr>
          <td><a href="/clientes/detalle/<%= cliente._id %>"><%= cliente.nombre %></a></td>
          <td><%= cliente.telefono %></td>
          <td><%= cliente.email %></td>
          <td>
            <a href="/clientes/editar/<%= cliente._id %>" class="btn btn-sm btn-warning">Editar</a>
            <a href="/clientes/eliminar/<%= cliente._id %>" class="btn btn-sm btn-danger" onclick="return confirm('¿Eliminar cliente?')">Eliminar</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>
<%- include('../partials/footer') %>