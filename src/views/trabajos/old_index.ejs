<%- include('../partials/header', { title }) %>
<%
function urgenciaColor(urgencia, fechaEntrega) {
  if (!fechaEntrega) return 'bg-secondary';
  const dias = (new Date(fechaEntrega) - new Date()) / (1000*60*60*24);
  if (urgencia === 'alta' || (dias <= 2 && dias >= 0)) return 'bg-danger text-white';
  if (urgencia === 'media' || (dias <= 5 && dias > 2)) return 'bg-warning text-dark';
  return 'bg-success text-white';
}
function isActive(param, value) {
  return (param && param == value) ? 'active' : '';
}
function isUrgenciaActive(param, value) {
  return (param && param == value) ? 'active' : '';
}
%>
<h1>Trabajos</h1>

<!-- Barra de búsqueda -->
<form class="row g-2 mb-3" method="get" id="busquedaForm">
  <div class="col-md-6">
    <div class="input-group">
      <input type="text" name="q" value="<%= req.query.q || '' %>" class="form-control" placeholder="Buscar por descripción o cliente...">
      <button class="btn btn-outline-primary" type="submit"><i class="bi bi-search"></i></button>
    </div>
  </div>
  <div class="col-md-6 text-end">
    <a href="/trabajos/nuevo" class="btn btn-success"><i class="bi bi-plus-circle"></i> Nuevo Trabajo</a>
  </div>
</form>

<!-- Filtros visuales -->
<form class="mb-3" method="get" id="filtrosForm">
  <input type="hidden" name="q" value="<%= req.query.q || '' %>">
  <div class="d-flex flex-wrap align-items-center gap-3 mb-2">

    <!-- Categorías -->
    <div>
      <span class="fw-bold me-2">Categoría:</span>
      <a href="/trabajos?<%= new URLSearchParams({ ...req.query, categoria: '' }).toString() %>" class="btn btn-outline-secondary btn-sm <%= !req.query.categoria ? 'active' : '' %>" title="Todas"><i class="bi bi-tags"></i></a>
      <% categorias.forEach(cat => { %>
        <a href="/trabajos?<%= new URLSearchParams({ ...req.query, categoria: cat._id }).toString() %>" class="btn btn-outline-primary btn-sm <%= isActive(req.query.categoria, cat._id) %>" title="<%= cat.nombre %>">
          <i class="bi bi-tag"></i> <%= cat.nombre %>
        </a>
      <% }) %>
    </div>

    <!-- Estados -->
    <div>
      <span class="fw-bold me-2">Estado:</span>
      <a href="/trabajos?<%= new URLSearchParams({ ...req.query, estado: '' }).toString() %>" class="btn btn-outline-secondary btn-sm <%= !req.query.estado ? 'active' : '' %>" title="Todos"><i class="bi bi-flag"></i></a>
      <% estados.forEach(est => { %>
        <a href="/trabajos?<%= new URLSearchParams({ ...req.query, estado: est._id }).toString() %>" class="btn btn-sm <%= isActive(req.query.estado, est._id) %>" style="background-color:<%= est.color %>; color:#fff;" title="<%= est.nombre %>">
          <i class="bi bi-flag-fill"></i> <%= est.nombre %>
        </a>
      <% }) %>
    </div>

    <!-- Urgencia -->
    <div>
      <span class="fw-bold me-2">Urgencia:</span>
      <a href="/trabajos?<%= new URLSearchParams({ ...req.query, urgencia: '' }).toString() %>" class="btn btn-outline-secondary btn-sm <%= !req.query.urgencia ? 'active' : '' %>" title="Todas"><i class="bi bi-exclamation-circle"></i></a>
      <a href="/trabajos?<%= new URLSearchParams({ ...req.query, urgencia: 'baja' }).toString() %>" class="btn btn-outline-success btn-sm <%= isUrgenciaActive(req.query.urgencia, 'baja') %>" title="Baja"><i class="bi bi-arrow-down-circle"></i></a>
      <a href="/trabajos?<%= new URLSearchParams({ ...req.query, urgencia: 'media' }).toString() %>" class="btn btn-outline-warning btn-sm <%= isUrgenciaActive(req.query.urgencia, 'media') %>" title="Media"><i class="bi bi-arrow-left-right"></i></a>
      <a href="/trabajos?<%= new URLSearchParams({ ...req.query, urgencia: 'alta' }).toString() %>" class="btn btn-outline-danger btn-sm <%= isUrgenciaActive(req.query.urgencia, 'alta') %>" title="Alta"><i class="bi bi-arrow-up-circle"></i></a>
    </div>

    <!-- Fechas -->
    <div>
      <span class="fw-bold me-2">Fechas:</span>
      <span class="input-group input-group-sm">
        <span class="input-group-text"><i class="bi bi-calendar-date"></i></span>
        <input type="date" name="fechaInicio" class="form-control" value="<%= req.query.fechaInicio || '' %>" onchange="document.getElementById('filtrosForm').submit()">
        <span class="input-group-text"><i class="bi bi-arrow-right"></i></span>
        <input type="date" name="fechaFin" class="form-control" value="<%= req.query.fechaFin || '' %>" onchange="document.getElementById('filtrosForm').submit()">
      </span>
    </div>

    <!-- Ordenar por -->
    <div>
      <span class="fw-bold me-2">Ordenar:</span>
      <select name="orden" class="form-select form-select-sm d-inline-block w-auto" onchange="document.getElementById('filtrosForm').submit()">
        <option value="">--</option>
        <option value="precio_asc" <%= req.query.orden === 'precio_asc' ? 'selected' : '' %>>Precio ↑</option>
        <option value="precio_desc" <%= req.query.orden === 'precio_desc' ? 'selected' : '' %>>Precio ↓</option>
        <option value="fechaIngreso_asc" <%= req.query.orden === 'fechaIngreso_asc' ? 'selected' : '' %>>Ingreso ↑</option>
        <option value="fechaIngreso_desc" <%= req.query.orden === 'fechaIngreso_desc' ? 'selected' : '' %>>Ingreso ↓</option>
        <option value="fechaEntrega_asc" <%= req.query.orden === 'fechaEntrega_asc' ? 'selected' : '' %>>Entrega ↑</option>
        <option value="fechaEntrega_desc" <%= req.query.orden === 'fechaEntrega_desc' ? 'selected' : '' %>>Entrega ↓</option>
      </select>
    </div>
  </div>
</form>

<table class="table table-striped align-middle">
  <thead>
    <tr>
      <th>Descripción</th>
      <th>Cliente</th>
      <th>Categoría</th>
      <th>Estado</th>
      <th>Urgencia</th>
      <th>Precio</th>
      <th>Ingreso</th>
      <th>Entrega</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% trabajos.forEach(trabajo => { %>
      <tr>
        <td>
          <a href="/trabajos/<%= trabajo._id %>"><%= trabajo.descripcion %></a>
        </td>
        <td><%= trabajo.cliente ? trabajo.cliente.nombre : '' %></td>
        <td><%= trabajo.categoria ? trabajo.categoria.nombre : '' %></td>
        <td>
          <span class="badge" style="background-color: <%= trabajo.estado ? trabajo.estado.color : '#ccc' %>">
            <%= trabajo.estado ? trabajo.estado.nombre : '' %>
          </span>
        </td>
        <td>
          <span class="badge <%= urgenciaColor(trabajo.urgencia, trabajo.fechaEntrega) %>">
            <%= trabajo.urgencia %>
          </span>
        </td>
        <td>$<%= trabajo.precio %></td>
        <td><%= trabajo.fechaIngreso ? trabajo.fechaIngreso.toLocaleDateString() : '' %></td>
        <td><%= trabajo.fechaEntrega ? trabajo.fechaEntrega.toLocaleDateString() : '' %></td>
        <td>
          <a href="/trabajos/<%= trabajo._id %>/editar" class="btn btn-sm btn-primary" title="Editar">
            <i class="bi bi-pencil"></i>
          </a>
          <form action="/trabajos/<%= trabajo._id %>/eliminar" method="post" style="display:inline;">
            <button class="btn btn-sm btn-danger" onclick="return confirm('¿Eliminar trabajo?')" title="Eliminar">
              <i class="bi bi-trash"></i>
            </button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>
<%- include('../partials/footer') %>