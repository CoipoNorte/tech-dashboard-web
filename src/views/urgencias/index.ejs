<%- include('../partials/header', { title }) %>
<h1>Urgencias</h1>
<a href="/urgencias/nuevo" class="btn btn-success mb-3"><i class="bi bi-plus-circle"></i> Nueva Urgencia</a>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Color</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% urgencias.forEach(urg => { %>
      <tr>
        <td><%= urg.nombre %></td>
        <td>
          <span class="badge" style="background-color: <%= urg.color %>"><%= urg.color %></span>
        </td>
        <td>
          <a href="/urgencias/<%= urg._id %>/editar" class="btn btn-sm btn-primary" title="Editar">
            <i class="bi bi-pencil"></i>
          </a>
          <form action="/urgencias/<%= urg._id %>/eliminar" method="post" style="display:inline;">
            <button class="btn btn-sm btn-danger" onclick="return confirm('Â¿Eliminar urgencia?')" title="Eliminar">
              <i class="bi bi-trash"></i>
            </button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>
<%- include('../partials/footer') %>