<%- include('../partials/header', { title }) %>
<h1>Estados</h1>
<a href="/estados/nuevo" class="btn btn-success mb-3"><i class="bi bi-plus-circle"></i> Nuevo Estado</a>
<div class="table-responsive">
  <table class="table table-striped align-middle">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Color</th>
        <th>Icono</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% estados.forEach(est => { %>
        <tr>
          <td><%= est.nombre %></td>
          <td>
            <span class="badge" style="background-color: <%= est.color %>"><%= est.color %></span>
          </td>
          <td>
            <i class="<%= est.icono || 'bi bi-flag' %>" style="font-size:1.5rem"></i>
            <span class="text-muted" style="font-size:0.9rem"><%= est.icono || 'bi bi-flag' %></span>
          </td>
          <td>
            <a href="/estados/<%= est._id %>/editar" class="btn btn-sm btn-primary" title="Editar">
              <i class="bi bi-pencil"></i>
            </a>
            <form action="/estados/<%= est._id %>/eliminar" method="post" style="display:inline;">
              <button class="btn btn-sm btn-danger" onclick="return confirm('Â¿Eliminar estado?')" title="Eliminar">
                <i class="bi bi-trash"></i>
              </button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>
<%- include('../partials/footer') %>