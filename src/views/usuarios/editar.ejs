<%- include('../partials/header', { title }) %>
<div class="row justify-content-center">
  <div class="col-lg-6">
    <div class="card shadow mb-4">
      <div class="card-body">
        <h2 class="mb-4 text-center"><i class="bi bi-person-circle"></i> Editar Usuario</h2>
        <% if (error) { %>
          <div class="alert alert-info text-center"><%= error %></div>
        <% } %>
        <form method="post" autocomplete="off">
          <div class="mb-3">
            <label>Nombre</label>
            <div class="input-group">
              <span class="input-group-text"><i class="bi bi-person"></i></span>
              <input type="text" name="nombre" class="form-control" value="<%= usuario.nombre %>" required>
            </div>
          </div>
          <div class="mb-3">
            <label>Usuario</label>
            <div class="input-group">
              <span class="input-group-text"><i class="bi bi-person-badge"></i></span>
              <input type="text" class="form-control" value="<%= usuario.username %>" disabled>
            </div>
          </div>
          <div class="mb-3">
            <label>Nueva contrase√±a</label>
            <div class="input-group">
              <span class="input-group-text"><i class="bi bi-key"></i></span>
              <input type="password" name="password" class="form-control" placeholder="Solo si desea cambiar">
            </div>
          </div>
          <div class="d-grid gap-2 d-md-flex justify-content-md-center">
            <button class="btn btn-primary"><i class="bi bi-save"></i> Guardar</button>
            <a href="/usuarios/perfil" class="btn btn-secondary">Cancelar</a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<%- include('../partials/footer') %>